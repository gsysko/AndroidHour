        >
        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="A"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="B"
            android:layout_weight="1"
            />
