    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="A"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="B"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
